<%= form_for @project, :html => { :class => 'form-horizontal' } do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :code, :class => 'col-lg-2 control-label' %>
    <div class="col-lg-6">
      <%= f.text_field :code, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :name, :class => 'col-lg-2 control-label' %>
    <div class="col-lg-6">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :customer_ref, :class => 'col-lg-2 control-label' %>
    <div class="col-lg-6">
      <%= f.text_field :customer_ref, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :company_id, :class => 'col-lg-2 control-label' %>
    <div class="col-lg-6">
      <%= f.number_field :company_id, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :start_at, :class => 'col-lg-2 control-label' %>
    <div class="col-lg-6">
      <%= f.date_select :start_at, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group dater">
    <%= f.label :end_at, :class => 'col-lg-2 control-label' %>
    <div class="col-lg-2">
      <%= f.text_field :type="text" :data-behavior='datepicker' %>

   </div>
  </div>

  <div class="form-group">
    <%= f.label :value, :class => 'col-lg-2 control-label' %>
    <div class="col-lg-6">
      <%= f.text_field :value, :class => 'form-control' %>
    </div>
  </div>


 <div class="form-actions">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => "btn btn-primary" %>
    </div>


<% end %>
