<%= form_for @staff_position, :html => { :class => 'form-horizontal'} do |f| %>
  <% if @staff_position.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@staff_position.errors.count, "error") %> prohibited this staff_position from being saved:</h2>

      <ul>
      <% @staff_position.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

   <div class="form-group">
    <%= f.label :code, :class => 'col-lg-2 control-label' %>
    <div class="col-lg-6">
      <%= f.text_field :code, :class => 'form-control' %>
    </div>
  </div>



 <div class="form-group">
    <%= f.label :position_name, :class => 'col-lg-2 control-label' %>
    <div class="col-lg-6">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
  </div>

   <div class="form-group">
    <%= f.label :unit, :class => 'col-lg-2 control-label' %>
    <div class="col-lg-6">
      <%= f.text_field :unit, :class => 'form-control' %>
    </div>
  </div>


 <div class="form-group">
    <%= f.label :tasks_main, :class => 'col-lg-2 control-label' %>
    <div class="col-lg-6">
      <%= f.text_area :tasks_main, :class => 'form-control' %>
    </div>
  </div>


 <div class="form-group">
    <%= f.label :tasks_other, :class => 'col-lg-2 control-label' %>
    <div class="col-lg-6">
      <%= f.text_area :tasks_other, :class => 'form-control'%>
    </div>
  </div>



  <div class="form-group">
    <%= f.label :is_acting, :class => 'col-lg-2 control-label' %>
    <div class="col-lg-6">
      <%= f.check_box :is_acting, :class => 'form-control' %>
    </div>
  </div>

   <div class="form-group">
    <%= f.label :staff_grade_min, :class => 'col-lg-2 control-label' %>
    <div class="col-lg-6">
      <%= f.number_field :staff_grade_min, :class => 'form-control' %>
    </div>
  </div>



<div class="form-group">
    <%= f.label :staff, :class => 'col-lg-2 control-label' %>
    <div class="col-lg-6">
      <%= f.collection_select :staff_id, Staff.find(:all), :id, :name, :include_blank=> 'Select staff', :class => 'form-control'  %>
    </div>
  </div>

   <div class="form-actions">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => "btn btn-primary" %>
    </div>

<% end %>
