<h1>Listing Documents</h1>

<table class="table table-striped">
  <thead>
    <tr>
      
      <th>Title</th>
    
      <th>Recieved from</th>

      <th>Filed by</th>
      <th>Status</th>
      
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        
        <td><%= document.title %></td>

        <td><%= document.recieved_from %></td>
      
        <td><%= document.filed_by %></td>
	<%= render :partial => 'action_menu', :locals => { :document => document }%>
       
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Document', new_document_path %>
