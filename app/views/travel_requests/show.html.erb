<% provide(:title, 'Travel Request Details') %>
<%- model_class = TravelRequest -%>
<div class="page-header">
   <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<p id="notice"><%= notice %></p>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:staff) %>:</strong></dt>
  <dd><%= @travel_request.staff_id %></dd>

  <dt><strong><%= model_class.human_attribute_name(:document) %>:</strong></dt>
  <dd><%= @travel_request.document_id %></dd>

  <dt><strong><%= model_class.human_attribute_name(:depart_id) %>:</strong></dt>
  <dd><%= @travel_request.depart_at %></dd>

  <dt><strong><%= model_class.human_attribute_name(:return_at) %>:</strong></dt>
  <dd><%= @travel_request.return_at %></dd>

 <dt><strong><%= model_class.human_attribute_name(:own_car) %>:</strong></dt>
  <dd><%= @travel_request.own_car %></dd>

  <dt><strong><%= model_class.human_attribute_name(:project) %>:</strong></dt>
  <dd><%= @travel_request.project_id %></dd>

  <dt><strong><%= model_class.human_attribute_name(:company) %>:</strong></dt>
  <dd><%= @travel_request.company_id %></dd>

  <dt><strong><%= model_class.human_attribute_name(:contact_person) %>:</strong></dt>
  <dd><%= @travel_request.contact_person_id %></dd>

  <dt><strong><%= model_class.human_attribute_name(:is_submitted) %>:</strong></dt>
  <dd><%= @travel_request.is_submitted %></dd>

  <dt><strong><%= model_class.human_attribute_name(:submitted_on) %>:</strong></dt>
  <dd><%= @travel_request.submitted_on %></dd>

  <dt><strong><%= model_class.human_attribute_name(:is_approved) %>:</strong></dt>
  <dd><%= @travel_request.is_approved %></dd>

  <dt><strong><%= model_class.human_attribute_name(:approved_by) %>:</strong></dt>
  <dd><%= @travel_request.approved_by %></dd>

  <dt><strong><%= model_class.human_attribute_name(:approved_on) %>:</strong></dt>
  <dd><%= @travel_request.approved_on %></dd>
</dl>


<%= link_to 'Edit', edit_travel_request_path(@travel_request) %> |
<%= link_to 'Back', travel_requests_path %>
